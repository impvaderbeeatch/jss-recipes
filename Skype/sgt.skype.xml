<computer_group>
    <!--
    Enable ID or Name for a Site-based Group
    <site>
        <id>%site_id%</id>
        <name>%site_name%</name>
    </site>
    -->

<!-- This Smart Group template is used for Installs -->

    <name>%group_name%</name>
    <is_smart>true</is_smart>
    <criteria>
        <criterion>
            <name>Application Title</name>
            <priority>0</priority>
            <and_or>and</and_or>
            <search_type>is</search_type>
            <value>%JSS_INVENTORY_NAME%</value>
        </criterion>
        <criterion>
            <name>Skype Version</name>
            <priority>1</priority>
            <and_or>and</and_or>
            <search_type>is not</search_type>
            <value>%VERSION%</value>
        </criterion>
        <criterion>
            <name>Skype Version</name>
            <priority>2</priority>
            <and_or>and</and_or>
            <search_type>is not</search_type>
            <value>Not Installed</value>
        </criterion>
    </criteria>
</computer_group>
